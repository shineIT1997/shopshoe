<input type="hidden" value="{{login}}" id="islogin">
<section class="owl-carousel active-product-area section_gap">
	<div class="single-product-slider">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-6 text-center">
						<div class="section-title">
							<h1>Sản phẩm nổi bật </h1>
						</div>
					</div>
				</div>

		<div class="row">
			{{#each products}}
			<div class="col-lg-3 col-md-6">
				<div class="single-product">
					<img  width="250px" height=" 250px" src="/upload/{{this.imagePath}}" alt="">
						<div class="product-details">
							<h6>{{this.title}}</h6>
									<div class="tag">
										{{# each this.theloai}}
										<a href="/cate/{{this.MaTL}}.{{this._id}}.html" aria-expanded="true" aria-controls="fruitsVegetable"><i>#{{this.tentheloai}}</i></a>
